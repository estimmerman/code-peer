extends ../layout

block content
  .page-header
    h3 Account Manager

  form.form-horizontal(action='/account/profile', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group(style="margin-bottom: 5px;")
      label.col-sm-3.control-label(for='email') Email
      .col-sm-7
        p(style="margin-top: 10px;") #{user.email}
    .form-group
      label.col-sm-3.control-label(for='firstName') First Name
      .col-sm-7
        input.form-control(type='text', name='firstName', id='firstName', value='#{user.firstName}', required)
    .form-group
      label.col-sm-3.control-label(for='lastName') Last Name
      .col-sm-7
        input.form-control(type='text', name='lastName', id='lastName', value='#{user.lastName}', required)
    .form-group
      label.col-sm-3.control-label(for='school') School
      .col-sm-7
        input.form-control(type='text', name='school', id='school', value='#{user.school}', required)
    .form-group
      label.col-sm-3.control-label(for='about') About Me
      .col-sm-7
        textarea.form-control(type='text', name='about', id='about') #{user.about}
    .form-group
      .col-sm-offset-3.col-sm-4
        button.btn.btn-primary(type='submit')
          i.fa.fa-pencilr
          | Update Profile

  .page-header
    h3 Change Password

  form.form-horizontal(action='/account/password', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-sm-3.control-label(for='oldPassword') Old Password
      .col-sm-7
        input.form-control(type='password', name='oldPassword', id='oldPassword', required)
    .form-group
      label.col-sm-3.control-label(for='newPassword') New Password
      .col-sm-7
        input.form-control(type='password', name='newPassword', id='newPassword', required)
    .form-group
      label.col-sm-3.control-label(for='confirmPassword') Confirm Password
      .col-sm-7
        input.form-control(type='password', name='confirmPassword', id='confirmPassword', required)
    .form-group
      .col-sm-offset-3.col-sm-4
        button.btn.btn-primary(type='submit')
          i.fa.fa-lock
          | Change Password

  .page-header
    h3 Delete Account

  form.form-horizontal(action='/account/delete', method='POST')
    .form-group
      p.col-sm-offset-3.col-sm-4 You can delete your account, but keep in mind this action is irreversible.
      input(type='hidden', name='_csrf', value=_csrf)
      .col-sm-offset-3.col-sm-4
        button.btn.btn-danger(type='submit')
          i.fa.fa-trash
          | Delete my account